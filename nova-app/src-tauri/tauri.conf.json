{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nova-app",
  "version": "0.1.0",
  "identifier": "com.nova.app",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ../nova-web",
    "beforeBuildCommand": "npm run build --prefix ../nova-web",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../nova-web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "nova-app",
        "decorations": true,
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

